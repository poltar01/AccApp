<ArabaScreen>
	name: "araba_screen"
    MDTopAppBar:
        id:araba_toolbar
        title: "Araba"
        elevation: 10
        pos_hint: {"top": 1}
        md_bg_color: focus_color
        specific_text_color: text_color
        # left_action_items:[['logout', lambda x: root.disconnect()]]
        right_action_items:[['logout', lambda x: root.disconnect()]]     


    MDScreen:
        pos: '0dp','-65dp'
        ScrollView:
            MDGridLayout:
                id: araba_customers_grid
                cols: 1
                spacing: '5dp'
                adaptive_height: True
                padding: ('10dp', '10dp', '10dp', '75dp')
                

<ArabaIslemlerScreen>
    name: "araba_islemler_screen"

    MDTopAppBar:
        id:araba_islemler_screen_toolbar
        title: "İşlemler"
        elevation: 10
        pos_hint: {"top": 1}
        md_bg_color: focus_color
        specific_text_color: text_color
        # left_action_items:[['logout', lambda x: root.disconnect()]]
        right_action_items:[['chevron-left', lambda x: root.arabaIslemlerGeri()]]     

    MDScreen:
        pos: '0dp','-65dp'

        BoxLayout:
            id: araba_islemler_boxlayout
            orientation:'vertical'
            halign: "center"

            MDLabel:
                id: araba_islemler_customer_label
                text: "<Customer_Name>"
                text_color: get_color_from_hex("#4a4939")
                font_size: 20
                halign: "center"
                size_hint: (1,.2)
                pos_hint: {"top": 1}

            BoxLayout:
                id:araba_islemler_datatable_boxlayout
                orientation:'vertical'
                bg_color: get_color_from_hex("#f7f4e7")

            MDGridLayout:
                size_hint: (1,.7)
                cols: 2
                spacing: '5dp'
                padding: ('10dp', '10dp', '10dp', '75dp')

                MDRaisedButton:
                    id: araba_islemler_ekmek_button
                    # icon: "baguette"
                    text:"Ekmek"
                    size_hint: (1,1)
                    adaptive_height: True
                    md_bg_color: get_color_from_hex("#f7f4e7")
                    text_color: get_color_from_hex("#4a4939")
                    font_size: 20
                    elevation: 5
                    border_radius: 100
                    border_radius: 20
                    radius: [15]
                    # type: 'small'
                    on_release: root.arabaIslemlerIleri("araba_durum_screen")
                         
                MDRaisedButton:
                    id: araba_islemler_iade_button
                    # icon: "arrow-u-left-bottom"
                    # icon: "car-arrow-left"
                    text:"İade"
                    size_hint: (1,1)
                    adaptive_height: True
                    md_bg_color: get_color_from_hex("#f7f4e7")
                    text_color: get_color_from_hex("#4a4939")
                    font_size: 20
                    elevation: 5
                    on_release: root.arabaIslemlerIleri("araba_iade_screen")      

                MDRaisedButton:
                    id: araba_islemler_bayat_button
                    # icon: "timelapse"
                    # icon: "car-defrost-front"
                    text:"Bayat"
                    size_hint: (1,1)
                    adaptive_height: True
                    md_bg_color: get_color_from_hex("#f7f4e7")
                    text_color: get_color_from_hex("#4a4939")
                    font_size: 20
                    elevation: 5
                    on_release: root.arabaIslemlerIleri("araba_bayat_screen")

                MDRaisedButton:
                    id: araba_islemler_tahsilat_button
                    # icon: "account-cash"
                    text:"Tahsilat"
                    size_hint: (1,1)
                    adaptive_height: True
                    md_bg_color: get_color_from_hex("#f7f4e7")
                    text_color: get_color_from_hex("#4a4939")
                    font_size: 20
                    elevation: 5
                    on_release: root.arabaIslemlerIleri("araba_tahsilat_screen")



