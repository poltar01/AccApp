<ArabaEkmekScreen>
    name: "araba_ekmek_screen"

    MDToolbar:
        id:araba_ekmek_screen_toolbar
        title: "Ekmek"
        elevation: 10
        pos_hint: {"top": 1}
        # md_bg_color: focus_color
        # specific_text_color: text_color
        # left_action_items:[['logout', lambda x: root.disconnect()]]
        right_action_items:[['chevron-left', lambda x: root.manager.get_screen("araba_islemler_screen").arabaIslemGeri()]]

    MDScreen:
        pos: '0dp','-65dp'

        BoxLayout:
            id: araba_ekmek_boxlayout
            orientation:'vertical'
            halign: "center"
            padding: ('10dp', '10dp', '10dp', '75dp')

            MDLabel:
                id: araba_ekmek_customer_label
                text: "<Customer_Name>"
                # text_color: get_color_from_hex("#4a4939")
                font_size: "20dp"
                halign: "center"
                size_hint: (1,.2)
                pos_hint: {"top": 0}

            BoxLayout:
                orientation:'vertical'
                padding: ('115dp', '0dp', '115dp', '200dp')
                # background_color: bg_color
                pos_hint: {"top": 1}
                MDTextField:
                    id: araba_ekmek_inputfield
                    mode: "rectangle"
                    hint_text: "Adet"
                    align: "center"
                    height: "20dp"
                    width: "20dp"
                    input_filter: 'int'
                    input_type: "number"

            MDRaisedButton:
                id: araba_ekmek_button
                # icon: "download"
                # icon: "check"
                text: "Onayla"
                size_hint: (.8,None)
                pos_hint: {"center_x": 0.5}
                adaptive_height: True
                # md_bg_color: get_color_from_hex("#f7f4e7")
                # text_color: get_color_from_hex("#4a4939")
                font_size: "25dp"
                height: "50dp"
                elevation: 5
                # pos_hint: {"bottom": 1}
                on_release: root.arabaEkmek()

