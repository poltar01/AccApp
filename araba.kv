<ArabaScreen>
    name: "araba_screen"
    MDToolbar:
        id:araba_toolbar
        title: "Araba"
        elevation: 10
        pos_hint: {"top": 1}
        # md_bg_color: focus_color
        # specific_text_color: text_color
        # left_action_items:[['logout', lambda x: root.disconnect()]]
        right_action_items:[['logout', lambda x: root.disconnect()]]    


    MDScreen:
        pos: '0dp','-65dp'
        ScrollView:
            MDGridLayout:
                id: araba_customers_grid
                cols: 1
                spacing: '5dp'
                adaptive_height: True
                padding: ('10dp', '10dp', '10dp', '75dp')
               

