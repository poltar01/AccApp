#:set text_color get_color_from_hex("#4a4939")
#:set focus_color get_color_from_hex("#e7e4c0")
#:set ripple_color get_color_from_hex("#c5bdd2")
#:set bg_color get_color_from_hex("#f7f4e7")
#:set selected_color get_color_from_hex("#0c6c4d")




<LoginScreen>
    name: "login_screen"
    BoxLayout:
        spacing: "10dp"
        orientation: 'vertical'
        MDTextField:
            id: username
            icon_left: "account-check"
            hint_text: "Kullanıcı Adı"
            # text_color: text_color
            foreground_color: 1, 0, 1, 1
            size_hint_x: None
            width: "300dp"
            height: "100dp"
            font_size: "25dp"
            pos_hint: {"center_x": 0.5}
            multiline: False
        MDTextField:
            id: password
            icon_left: "key-variant"
            hint_text: "Parola"
            # text_color: text_color
            foreground_color: 1, 0, 1, 1
            size_hint_x: None
            width: "300dp"
            height: "100dp"
            font_size: "25dp"            
            pos_hint: {"center_x": 0.5}
            password: True
            multiline: False
        MDFillRoundFlatButton:
            text: "Giriş Yap"
            font_size: "25dp"
            height: "35dp"
            elevation: 5
            # md_bg_color: focus_color
            # text_color: text_color
            pos_hint: {"center_x": 0.5}
            size_hint: .8,None
            on_press: root.doLogin(username.text, password.text)
           
        MDIcon:
            icon: 'baguette'
            halign: "center"
            font_size: "400dp"
            # color: text_color